CREATE TABLE locations (
    location_id INT,
    killer_id INT,
    poor_rate_of_the_country DECIMAL(5,2),
    crime_rate DECIMAL(5,2),
    legal_gun_ownership BOOLEAN,
    country TEXT,
    city TEXT,
    PRIMARY KEY (location_id, killer_id),
    FOREIGN KEY (killer_id) REFERENCES serial_killers(killer_id)
);

