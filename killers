-- Création de la table
CREATE TABLE serial_killers (
    killer_id INTEGER PRIMARY KEY,
    name TEXT NOT NULL,
    start_year INTEGER,
    end_year INTEGER,
    years_active TEXT,
    proven_victims INTEGER,
    possible_victims TEXT,
    country TEXT,
    birth_year INTEGER,
    mental_health_diagnosis TEXT,
    status TEXT,
    keywords TEXT
);

