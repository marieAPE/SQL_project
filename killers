CREATE TABLE investigations (
    investigation_id INT PRIMARY KEY,
    killer_id INT,
    start_year INT,
    end_year INT,
    arrest_year INT,
    conviction_year INT,
    number_of_victims_confirmed INT,
    number_of_victims_claimed INT,
    FOREIGN KEY (killer_id) REFERENCES killers(killer_id)
);

